<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>servlet_acceder</servlet-name>
        <servlet-class>servlets.servlet_acceder</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servlet_login</servlet-name>
        <servlet-class>servlets.servlet_login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servlet_info_curso</servlet-name>
        <servlet-class>servlets.servlet_info_curso</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servlet_salir</servlet-name>
        <servlet-class>servlets.servlet_salir</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servlet_registro</servlet-name>
        <servlet-class>servlets.servlet_registro</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servlet_acceder</servlet-name>
        <url-pattern>/servlet_acceder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servlet_login</servlet-name>
        <url-pattern>/servlet_login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servlet_info_curso</servlet-name>
        <url-pattern>/servlet_info_curso</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servlet_salir</servlet-name>
        <url-pattern>/servlet_salir</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servlet_registro</servlet-name>
        <url-pattern>/servlet_registro</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
